---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Crear Empleo">
    <main class="col-span-2 px-6 mt-20 flex flex-col items-center justify-center h-full">
        <div class="flex flex-col items-center justify-center h-full">
            <form method="post" class="flex flex-col items-center justify-center gap-4 bg-gray-800 rounded-2xl p-4 shadow-2xl shadow-gray-800" id="formularioEmpleo">
                <h1 class="text-4xl text-white">Crear Empleo</h1>
                <label for="titulo">
                    <span class="text-white">Titulo</span>
                    <input type="text" name="titulo" id="titulo" class="w-full h-10 border-black border-2 dark:border-white dark:border-2 rounded-2xl p-2 text-white" placeholder="Escribe el titulo del puesto" maxlength="100" required />
                </label>
                <label
                    for="puesto"
                    class="flex flex-col gap-4 mt-4 text-gray-800"
                >
                    <span class="text-white">Puesto</span>
                    <select name="puesto" id="puesto" class="text-black">
                        <option value="">Selecciona un puesto</option>
                        <option value="desarrollador_web"
                            >Desarrollador Web</option
                        >
                        <option value="desarrollador_backend"
                            >Desarrollador Backend</option
                        >
                        <option value="desarrollador_frontend"
                            >Desarrollador Frontend</option
                        >
                        <option value="desarrollador_fullstack"
                            >Desarrollador Full Stack</option
                        >
                        <option value="ingeniero_de_datos"
                            >Ingeniero de Datos</option
                        >
                        <option value="cientifico_de_datos"
                            >Científico de Datos</option
                        >
                        <option value="administrador_de_base_de_datos"
                            >Administrador de Base de Datos</option
                        >
                        <option value="especialista_en_seguridad"
                            >Especialista en Seguridad Informática</option
                        >
                        <option value="desarrollador_movil"
                            >Desarrollador Móvil</option
                        >
                        <option value="arquitecto_de_software"
                            >Arquitecto de Software</option
                        >
                        <option value="tester_qa">Tester QA</option>
                        <option value="devops_engineer">Ingeniero DevOps</option
                        >
                        <option value="consultor_tecnologico"
                            >Consultor Tecnológico</option
                        >
                        <option value="administrador_sistemas"
                            >Administrador de Sistemas</option
                        >
                        <option value="programador_junior"
                            >Programador Junior</option
                        >
                        <option value="programador_senior"
                            >Programador Senior</option
                        >
                    </select>
                </label>
                <label for="descripcion">
                    <span class="text-white">Descripcion</span>
                    <textarea
                        name="descripcion"
                        id="descripcion"
                        class="w-full h-30 border-black border-2 dark:border-white dark:border-2 rounded-2xl p-2 text-white"
                        placeholder="Escribe una breve descripcion del puesto"
                        maxlength="1000"
                    ></textarea>
                </label>
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3.5 px-4 rounded-md mt-4" id="crearEmpleo">Crear Puesto de trabajo</button>
            </form>
        </div>
    </main>
</Layout>
<script src="./../scripts/ts/CrearEmpleo.ts"></script>