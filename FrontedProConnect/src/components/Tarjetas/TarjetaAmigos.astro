---
interface Props {
    Nombre: string;
    imagen: string;
}
const { imagen, Nombre } = Astro.props;
---

<div class="flex flex-row p-4 gap-3 mb-2 justify-between">
    <div class="flex flex-row gap-3">
        <img src={imagen} alt="fotoPerfil" class="w-13 h-13 rounded-2xl" />
        <div class="flex flex-col">
            <span class="text-blue-600"
                ><a href="/MirarPerfil">{Nombre}</a></span
            >
        </div>
    </div>
    <div class="flex flex-col justify-center items-center">
        <button
            class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-4xl cursor-pointer"
            id="seguir"
        >
            Seguir +
        </button>
    </div>
</div>

<script>
    const seguir = document.querySelectorAll("#seguir");

    seguir?.forEach((element) => {
        element?.addEventListener("click", () => {
            if (element) {
                element.innerHTML = "Siguiendoâœ“";
            }
            element?.classList.remove("bg-blue-500");
            element?.classList.add("bg-green-500");
        });
    });
</script>
