---
interface Props {
    id: number;
    nombrePuesto: string;
    nombreEmpresa: string;
    ubicacion: string;
    imagenEmpresa: string;
}
const { nombrePuesto, nombreEmpresa, ubicacion, imagenEmpresa, id} = Astro.props;
---
<div class="flex flex-row items-center rounded-lg w-full h-40 bg-gray-800 text-white p-4">
    <img src={imagenEmpresa === "" ? "/assets/ImagenesPerfil/predeterminado.png" : imagenEmpresa} alt="imagenempresa" class="rounded-full w-16">
    <div class="flex flex-col ml-4">
        <h1>{nombrePuesto}</h1>
        <a href=`/MirarUsuarios/${id}` class="underline hover:text-gray-500">{nombreEmpresa}</a>
        <span>Pais: {ubicacion}</span>
        <a href=`` class="underline hover:text-gray-500">Mirar Empleo</a>
    </div>
</div>